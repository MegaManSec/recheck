{
  "name": "recheck",
  "description": "A vulnerable RegExp (ReDoS) checker for JavaScript (ECMA-262) RegExp.",
  "license": "MIT",
  "author": "TSUYUSATO Kitsune <make.just.on@gmail.com>",
  "homepage": "https://makenowjust-labo.github.io/recheck/",
  "repository": "https://github.com/MakeNowJust-Labo/recheck.git",
  "version": "4.0.2",
  "main": "main.js",
  "browser": "browser.js",
  "types": "index.d.ts",
  "keywords": [
    "redos",
    "regexp",
    "security",
    "vulnerability"
  ],
  "scripts": {
    "build": "esbuild --bundle --platform=node --format=cjs src/index.ts --outfile=main.js && esbuild --bundle --platform=browser --format=esm src/fallback.ts --outfile=browser.js",
    "format": "prettier -w src/**/*.ts *.json index.d.ts",
    "lint": "prettier --list-different src/**/*.ts *.json index.d.ts",
    "typecheck": "tsc --noEmit -p ."
  },
  "files": [
    "browser.js",
    "main.js"
  ],
  "optionalDependencies": {
    "recheck-linux-x64": "4.0.2",
    "recheck-macos-x64": "4.0.2",
    "recheck-windows-x64": "4.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.9",
    "esbuild": "^0.13.15",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2"
  }
}
